</main>
<footer>© 2025 Infiniment Autiste 77 — IA77 • SIREN 943507343 • RNA W772011360</footer>

<script>
document.getElementById('f').addEventListener('submit', function(e){
  e.preventDefault();
  const d=new FormData(this);
  const subject=encodeURIComponent('Contact IA77 — '+(d.get('sujet')||''));
  const body=encodeURIComponent((d.get('message')||'')+'\n\n— '+(d.get('nom')||'')+' ('+(d.get('email')||'')+')');
  location.href='mailto:infinimentautiste.ia77@gmail.com?subject='+subject+'&body='+body;
  document.getElementById('ok').style.display='block';
  this.reset();
});
</script>
