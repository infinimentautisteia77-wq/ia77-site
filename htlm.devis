label{display:block;margin:.5rem 0 .2rem}
input,textarea{width:100%;padding:.6rem;border:1px solid #cbd5e1;border-radius:8px;font:inherit}
button{display:inline-block;padding:.6rem 1rem;border-radius:6px;background:#0a7bdc;color:#fff;border:none;font-weight:700}
.success{background:#e8f7ee;border:1px solid #b8e1c1;padding:.8rem;border-radius:8px;margin-top:.8rem;display:none}
